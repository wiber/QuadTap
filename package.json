{
  "name": "quad-tap",
  "version": "0.3.6",
  "description": "A pure JavaScript implementation of the Quad-Tap overlay interaction for videos with advanced video player API integration",
  "main": "dist/quad-tap.js",
  "module": "dist/quad-tap.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src",
    "adapters",
    "docs"
  ],
  "exports": {
    ".": {
      "import": "./dist/quad-tap.esm.js",
      "require": "./dist/quad-tap.js"
    },
    "./SettingsBuilder": {
      "import": "./dist/SettingsBuilder.esm.js",
      "require": "./dist/SettingsBuilder.js"
    },
    "./adapters/VideoPlayerAdapter": {
      "import": "./dist/adapters/VideoPlayerAdapter.esm.js",
      "require": "./dist/adapters/VideoPlayerAdapter.js"
    }
  },
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prestart": "node scripts/check-port.js",
    "start": "node scripts/copy-ip-to-clipboard.js && pkill -f http-server || true && npx http-server ./dist -p 8080 -c-1 --cors -o",
    "poststart": "node scripts/cleanup.js",
    "prepare": "npm run build",
    "lint": "eslint src --ext .js",
    "format": "prettier --write \"src/**/*.js\"",
    "docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "video",
    "overlay",
    "interaction",
    "emoji",
    "tap",
    "quadrant",
    "video-player",
    "api",
    "youtube",
    "vimeo",
    "html5-video",
    "throw-down",
    "comment",
    "reaction",
    "settings-builder",
    "adapter"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/quad-tap.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/quad-tap/issues"
  },
  "homepage": "https://github.com/yourusername/quad-tap#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "chalk": "^5.4.1",
    "clean-webpack-plugin": "^4.0.0",
    "clipboardy": "^2.3.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  }
}
